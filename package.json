{
  "name": "wallet-service",
  "version": "1.0.0",
  "description": "A basic wallet service",
  "main": "dist/server.js",
  "author": "Glory Andrew",
  "license": "ISC",
  "engines": {
    "node": ">=16 <19"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "start:dev": "nodemon --watch src --exec ts-node src/server.ts",
    "migration:create": "cd ./src/database/migrations && typeorm migration:create",
    "migration:run": "typeorm migration:run -d ./dist/database/datasource.js",
    "migration:revert": "typeorm migration:revert -d ./dist/database/datasource.js",
    "migration:show": "typeorm migration:show -d ./dist/database/datasource.js",
    "seed": "node dist/database/seeders/seed-up.js seed-up",
    "test": "NODE_ENV=test jest --verbose",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^5.14.0",
    "@prisma/client": "^5.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "kysely": "^0.27.3",
    "kysely-postgres-js": "^2.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-pool": "^3.6.2",
    "prisma-kysely": "^1.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.10.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "yargs": "^17.7.2"
  }
}
